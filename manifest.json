{
  "name": "SudokuTrainer",
  "short_name": "SudokuTrainer",
  "description": "Die App ist ein Trainer f√ºr klassisches Sudoku.",

  "id": "/sudokuTrainer/index.html",
  "scope": "/sudokuTrainer/",
  "start_url": "/sudokuTrainer/index.html",

  "background_color": "#ffffff",
  "theme_color": "#ffffff",

  "display": "standalone",

  "icons": [
    {
      "src": "./images/s256.png",
      "type": "image/png",
      "sizes": "256x256"
    },
    {
      "src": "./images/s512.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "./images/s1024.png",
      "type": "image/png",
      "sizes": "1024x1024"
    }
  ],

  "screenshots": [
    {
      "src": "./images/screenshotHandy.png",
      "sizes": "488x910",
      "type": "image/jpeg",
      "form_factor": "narrow",
      "label": "sudoku-trainer"
    },
    {
      "src": "./images/screenshot-533x406.png",
      "sizes": "533x406",
      "type": "image/jpeg",
      "form_factor": "wide",
      "label": "sudoku-trainer"
    }
  ],

  "share_target": {
    "action": "/sudokuTrainer/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "files": [
        {
          "name": "puzzleFile",
          "accept": ["text/plain", ".txt"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/sudokuTrainer/",
      "accept": {
        "text/plain": [".txt"]
      },
      "launch_type": "single-client"
    }
  ]
}
